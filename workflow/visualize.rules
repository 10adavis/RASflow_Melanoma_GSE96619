import pandas as pd
import numpy as np

configfile: "configs/config_visualize.yaml"

outputpath = config["OUTPUTPATH"]

rule end:
    input:
        volcano = outputpath + "/volcano_plot.pdf",
        heatmap = outputpath + "/heatmap.pdf"

rule plot:
    input:
        dea = config["DEAFILE"],
        deg = config["DEGFILE"],
        countpath = directory(config["COUNTPATH"])
    output:
        volcano = outputpath + "/volcano_plot.pdf",
        heatmap = outputpath + "/heatmap.pdf"
    shell:
        "Rscript scripts/visualize.R"

