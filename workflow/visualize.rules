import os

configfile: "configs/config_visualize.yaml"

volcano_path = os.path.dirname(config["DEAFILE"])
heatmap_path = os.path.dirname(config["NORMFILES"]["control"])
name_control = config["NAME_CONTROL"]
name_treat = config["NAME_TREAT"]

rule end:
    input:
        volcano = volcano_path + "/volcano_plot_" + name_control + "_" + name_treat + ".pdf",
        heatmap = heatmap_path + "/heatmap_plot_" + name_control + "_" + name_treat + ".pdf"

rule plot:
    input:
        dea = config["DEAFILE"],
        deg = config["DEGFILE"]
    output:
        volcano = volcano_path + "/volcano_plot_" + name_control + "_" + name_treat + ".pdf",
        heatmap = heatmap_path + "/heatmap_plot_" + name_control + "_" + name_treat + ".pdf"
    shell:
        "Rscript scripts/visualize.R"

